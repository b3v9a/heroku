extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Search for Comics
					div.signup-wall
						form(name="search",method="post",action="/search")
							input(type='radio', value='Humor', checked) Humor
							input(type='radio', value='Fantasy') Fantasy
							input(type="text", name="string") search terms
							button(class='btn btn-lg btn-primary btn-block', type='submit') Search!
							span.clearfix
