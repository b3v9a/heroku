extends layout

block content
    div.container
        div.row
            div.col-lg-6.col-md-4.col-md-offset-3
                h1.text-center New Comic
                .jumbotron
                    div.signup-wall
                        form#formAddComic(name="addcomic",method="post",action="/comics/addcomic")
                            input(type='text', name='comicTitle', class='form-control', placeholder='Insert Comic Title',required, autofocus)
                            p.
                                <fieldset>
                                    <p>
                                        <label>Choose a Category :</label>
                                        <select name = "comicCategory">
                                            <option value = "Action">Action</option>
                                            <option value = "Alternative">Alternative</option>
                                            <option value = "Children's">Children's</option>
                                            <option value = "Crime">Crime</option>
                                            <option value = "Fantasy">Fantasy</option>
                                            <option value = "Horror">Horror</option>
                                            <option value = "Humor">Humor</option>
                                            <option value = "Manga">Manga</option>
                                            <option value = "Non-Fiction">Non-Fiction</option>
                                            <option value = "Political">Political</option>
                                            <option value = "Romance">Romance</option>
                                            <option value = "Science Fiction">Science Fiction</option>
                                            <option value = "Slice-Of-Life">Slice-Of-Life</option>
                                            <option value = "Superhero">Superhero</option>
                                        </select>
                                    </p>
                                </fieldset>
                            p.
                            input(type='url', name='comicSource', class='form-control', placeholder='Insert Comic Source (eg. .com)',required, autofocus)
                            p.
                            input(type='text', name='description', class='form-control', placeholder='Insert a Description',required, autofocus)
                            p.
                            input(type='hidden', name='panels', class='form-control', placeholder='Insert Panels',required, autofocus)
                            p.
                            input(type='url', name='firstpanel', class='form-control', placeholder='Insert First Panel Image (.png/.jpg)',required, autofocus)
                            p.
                            button(class='btn btn-md btn-primary btn-block', type='submit') Create New Comic!
                            span.clearfix